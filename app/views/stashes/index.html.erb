<%= link_to "New Search", new_recipes_preview_path, class: "action-button shadow animate blue" %>

  <div class="gray-opaque">
    <div class="wrap">
      <header>
        <p><%= link_to "The Stash", root_path, class: "stash" %></p>
      </header>
    </div>
    <% @stashes.each do |stash| %>
      <div class="recipe_bucket">
        <h2><%= stash.name %></h2>

        <div class="buttons1"><%= button_to "Visit this recipe", stash.recipe_url, class: "btn2", target: :_blank %></div>

        <div><%= image_tag stash.photo_url %></div>
        <ul>
        <% stash.ingredients.each do |ingredient| %>
          <li class="stash_list"><%= ingredient %></li>
        <% end %>
        </ul>
        <strong><%= link_to "Trash It", stash_path(stash.yummly_id), class: "remove" %></strong>
      </div>
    <% end %>
  </div>

<script>
  $(removeStash)
</script>